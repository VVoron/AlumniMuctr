@model ProgrammsRequest

<div id="menuToggle">
    <input type="checkbox" />
    <span></span>
    <span></span>
    <span></span>
    <ul id="menu">
        <li>
            <a asp-controller="Home" asp-action="Index" type="submit">Главная</a>
        </li>
        <li>
            <a asp-controller="Admin" asp-action="Index" type="submit">Все таблицы</a>
        </li>
        <li>
            <a asp-controller="Admin" asp-action="Logout" type="submit">Выйти</a>
        </li>
    </ul>
</div>

<form class="edit-form" method="post" asp-action="Edit" enctype="multipart/form-data">
    <div class="row pb-2">
        <h2 class="text-primary">Обновление программы</h2>
        <hr />
    </div>

    <div class="user-details">
        <div class="input-box">
            <span asp-validation-for="Title" class="details">Заголовок</span>
            <input asp-for="Title" name="Title" placeholder="Заголовок" required>
        </div>
    </div>

    <div class="user-details">
        <div class="input-box">
            <span asp-validation-for="BriefDescription" class="details">Краткое содержание</span>
            <textarea asp-for="BriefDescription" class="brief-textarea" name="BriefDescription" type="text" required></textarea>
        </div>

        <div class="input-box">
            <span asp-validation-for="Description" class="details">Содержание</span>
            <textarea id="for-add" asp-for="Description" class="description-textarea" name="Description" type="text" required></textarea>
        </div>

        <div class="nav">
            <a class="btn btn-for-add" onclick="AddTag('strong')">Жирный шрифт</a>
            <a class="btn btn-for-add" onclick="AddTag('curs')">Курсив</a>
            <a class="btn btn-for-add" onclick="AddTag('br')">Перенос строки</a>
            <a class="btn btn-for-add" onclick="AddTag('href')">Гиперссылка</a>
            <a class="btn btn-for-add" onclick="AddTag('img')">Фото</a>
        </div>

        <div class="file-button">
            <span asp-validation-for="Photo" class="details">Загрузите Ваше выпускное фото или актуальное фото (при желании)</span>
            <br>
            <label for="upload-file">Загрузить файл</label>
            <input asp-for="Photo" name="Photo" type="file" id="upload-file">
        </div>

        <div class="user-details">
            <div class="input-box">
                <span asp-validation-for="PhotoUrl" class="details">Или ссылка на фото</span>
                <input asp-for="PhotoUrl" name="PhotoUrl" placeholder="example.com/photo1.png" required>
            </div>
        </div>
    </div>

    <button type="submit" class="btn btn-primary" style="width:200px">Обновить</button>
    <a asp-controller="Programms" asp-action="Index" class="btn btn-secondary" style="width:200px">Вернуться</a>
</form>

@section Scripts{
    @{
    <partial name="_ValidationScriptsPartial" />
    }
    }